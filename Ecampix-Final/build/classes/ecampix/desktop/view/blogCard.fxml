            <FontAwesomeIconView fill="#ffb200" glyphName="COMMENT" size="24" />
         </graphic>
      </Button>
      <Button fx:id="showBlogbtn" layoutX="14.0" layoutY="126.0" mnemonicParsing="false" prefHeight="52.0" prefWidth="85.0" styleClass="cardIcon">

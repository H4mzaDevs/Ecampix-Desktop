            <FontAwesomeIconView fill="#ffb600" glyphName="FILE" size="24" />
         </graphic>
      </Button>
      <Button fx:id="qrCodebtn" layoutX="291.0" layoutY="108.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="111.0" styleClass="cardIcon">
         <graphic>
            <FontAwesomeIconView fill="#616f49" glyphName="QRCODE" size="48" />
         </graphic>
      </Button>
   </children>
</AnchorPane>

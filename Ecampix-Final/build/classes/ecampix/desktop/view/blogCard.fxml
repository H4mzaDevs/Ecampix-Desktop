<AnchorPane id="AnchorPane" prefHeight="178.0" prefWidth="402.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ecampix.desktop.controller.BlogCardController">
    <stylesheets>
        <URL value="@blogcard.css" />
    </stylesheets>
   <children>
      <ImageView fx:id="cardBlogImg" fitHeight="106.0" fitWidth="369.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/Images/blogImage.jpg" />
         </image>
      </ImageView>
      <Label fx:id="cardBlogTitle" layoutX="223.0" layoutY="14.0" text="Hawaria #1">
         <font>
            <Font name="Candara" size="26.0" />
         </font>
      </Label>
      <Label fx:id="cardBlogDesc" layoutX="223.0" layoutY="48.0" prefHeight="70.0" prefWidth="111.0" text="Description ...">
